<div id="wrapperu">
	<br>
	<div id="search_bar">
	
	<%= render partial: 'shared/search' %>


	</div>
	<br>
	
	<div id="main_show">
		
		<div id="video">
			<% if !@q.blank? %>
			<div id="video_player">
				<% video = @main[0]  %>
			
				<%=	"<iframe width='711' height='400' src='//www.youtube.com/embed/#{video[:id]}?rel=0' frameborder='0'></iframe><p>".html_safe %> 			
			</div>
			<div id="start">
				
			</div>
				<ul id="vids">
				<%= content_tag :h2, "*Select thumbnail to view videos with '#{@q}'" %>
					<% @main.each do |video| %>
						<li><p><%= image_tag "#{video[:thumbnail]}", class: "thumbnail", id: video[:id], data:{id: video[:id], title: video[:title]} %></p><p class="link_note"><%= link_to 'Click to Take Notes', user_notes_path(current_user, note: { video_url: video[:id], title: video[:title]}), {method: :post} %> <% "</p><br><br></li>".html_safe %></p></li> 
					<% end %>
				</ul>
			<% elsif current_user.notes.count > 0 %>
				<div><h1>ENTER A SEARCH INTO THE NAV BAR</h1></div>
			<% else %>
				<div id="welcome_note">
					<%= render partial: 'welcome' %>
				</div>
			<% end %>
		</div>
	</div>

</div>